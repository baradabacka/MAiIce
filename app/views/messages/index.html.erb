<h1><%= I18n.t('listing_messages')%></h1>

<table>
  <thead>
    <tr>
      <th> <%= I18n.t('employee') %></th>
      <th><%= I18n.t('url')%></th>
      <th><%= I18n.t('email')%></th>
      <th><%= I18n.t('commit')%></th>
      <th><%= I18n.t('time_of_creation')%></th>
      <th><%= I18n.t('time_updates')%></th>
      <th><%= I18n.t('state')%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% @messages.each do |message| %>
      <tr>
        <td><%= message.employee %></td>
        <td><%= message.url %></td>
        <td><%= message.email %></td>
        <td><%= message.commit %></td>
        <td><%= message.created_at %></td>
        <td><%= message.updated_at %></td>
        <td><%= message.aasm_state %></td>
        <td><%= link_to I18n.t('show'), message %></td>
        <td><%= link_to I18n.t('edit'), edit_message_path(message) %></td>
        <td><%= link_to I18n.t('destroy'), message, method: :delete, data: { confirm: I18n.t('are_you_sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

